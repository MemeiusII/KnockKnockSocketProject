package me.EthanBilbrey.KnockKnockSocketProject.ServerSide;

import java.util.ArrayList;

public class KnockKnockProtocol 
{
	public static String processInput(String inputLine) 
	{
		ArrayList<String> joke = new ArrayList();
		joke.add("Knock knock!");
		joke.add("Joe");
		joke.add("Joe Mama! bye");
		
		int count = 0;
		String jokeLine = null;
		
		if(inputLine != null) 
		{
			if(count == 0 && inputLine.contains("who's there")) 
			{
				jokeLine = "[Server] " + joke.get(0);
				count++;
			}
			else if(count == 0 && (inputLine.contains("who's there") != true)) 
			{
				jokeLine = "[Server] Hint: enter \"who's there\"";
			}
			else if(count == 1) 
			{
				jokeLine = joke.get(1);
				count++;
			}
			else if(count == 1 && (inputLine.contains("joe who"))) 
			{
				jokeLine = joke.get(2);
			}
			else if(count == 1 && (inputLine.contains("joe who") == false)) 
			{
				jokeLine = "[Server] Hint: enter \"___ who\"";
			}
			
		}
		return jokeLine;
	}
}
